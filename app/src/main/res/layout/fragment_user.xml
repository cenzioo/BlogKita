<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/penjelasan_akun"
        android:layout_marginTop="30dp"
        android:text="Daftar dan masuk untuk menggunakan fitur - fitur pada aplikasi Blog Kita"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAkunLogin"
        android:layout_below="@id/penjelasan_akun"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Masuk"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAkunRegister"
        android:layout_below="@id/penjelasan_akun"
        android:background="@drawable/custom_button"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:text="Daftar"/>


</RelativeLayout>